<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.adeda.madlibs.ChoiceActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Choose a story!"
        android:textSize="30sp"
        android:textStyle="bold"
        android:id="@+id/headerChoice"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerChoice"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorText"
        android:textColor="@color/colorBackground"
        android:textSize="20sp"
        android:text="Simple"
        android:textAllCaps="false"
        android:id="@+id/choiceBtn1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/choiceBtn1"
        android:backgroundTint="@color/colorText"
        android:textColor="@color/colorBackground"
        android:textSize="20sp"
        android:text="Tarzan"
        android:textAllCaps="false"
        android:id="@+id/choiceBtn2"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/choiceBtn2"
        android:backgroundTint="@color/colorText"
        android:textColor="@color/colorBackground"
        android:textSize="20sp"
        android:text="University"
        android:textAllCaps="false"
        android:id="@+id/choiceBtn3"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/choiceBtn3"
        android:backgroundTint="@color/colorText"
        android:textColor="@color/colorBackground"
        android:textSize="20sp"
        android:text="Clothes"
        android:textAllCaps="false"
        android:id="@+id/choiceBtn4"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/choiceBtn4"
        android:backgroundTint="@color/colorText"
        android:textColor="@color/colorBackground"
        android:textSize="20sp"
        android:text="Dance"
        android:textAllCaps="false"
        android:id="@+id/choiceBtn5"/>

</RelativeLayout>
